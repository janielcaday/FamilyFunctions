<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildPrizesFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/rewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards Screen"
        android:textSize="26dp"
        android:textColor="@color/primary_dark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/child_rewards_photo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/rewardsTitle"
        android:src="@drawable/child_rewards_picture"
        android:layout_centerHorizontal="true"/>


    <ListView
        android:id="@+id/rewards_list"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@+id/child_rewards_photo"/>

</RelativeLayout>